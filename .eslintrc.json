{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": ["**/lib/*.js"],
    "rules": {
        "no-bitwise": 0,
        "no-plusplus": 0,
        "guard-for-in": 0,
        "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"]
    }
}
